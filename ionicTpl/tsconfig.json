{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
	"skipLibCheck": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
	"types": [
	  "node"
	],
	"typeRoots": [
	  "node_modules/@types"
	]
  },
  "exclude": [
    "node_modules",
    "tinymce",
	"browser-image-compression"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
